<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controllers.BookFormController" spacing="20" styleClass="book-form-root">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>

   <!-- Form Title -->
   <Label fx:id="titleLabel" text="Add New Book" styleClass="form-title">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>

   <!-- Form Fields -->
   <VBox spacing="20" styleClass="form-content">
      
      <!-- Book Title -->
      <VBox spacing="8">
         <Label text="Book Title *" styleClass="field-label" />
         <TextField fx:id="titleField" promptText="Enter book title" styleClass="form-field" />
      </VBox>

      <!-- Author -->
      <VBox spacing="8">
         <Label text="Author *" styleClass="field-label" />
         <TextField fx:id="authorField" promptText="Enter author name" styleClass="form-field" />
      </VBox>

      <!-- Category -->
      <VBox spacing="8">
         <Label text="Category *" styleClass="field-label" />
         <TextField fx:id="categoryField" promptText="Enter book category" styleClass="form-field" />
      </VBox>

      <!-- ISBN -->
      <VBox spacing="8">
         <Label text="ISBN *" styleClass="field-label" />
         <TextField fx:id="isbnField" promptText="Enter ISBN number" styleClass="form-field" />
      </VBox>

      <!-- Copies Information -->
      <HBox spacing="20">
         
         <!-- Total Copies -->
         <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Total Copies *" styleClass="field-label" />
            <Spinner fx:id="totalCopiesSpinner" styleClass="form-spinner" prefWidth="150" />
         </VBox>

         <!-- Available Copies -->
         <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Available Copies *" styleClass="field-label" />
            <Spinner fx:id="availableCopiesSpinner" styleClass="form-spinner" prefWidth="150" />
         </VBox>

      </HBox>

   </VBox>

   <!-- Buttons -->
   <HBox spacing="15" alignment="CENTER" styleClass="button-container">
      <Button fx:id="saveButton" text="ðŸ’¾ Save Book" styleClass="save-button" prefWidth="120" />
      <Button fx:id="cancelButton" text="âŒ Cancel" styleClass="cancel-button" prefWidth="120" />
   </HBox>

   <!-- Required Fields Note -->
   <Label text="* Required fields" styleClass="required-note" />

</VBox>