<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controllers.BookController" styleClass="books-root">

   <!-- Top Search Section -->
   <top>
      <VBox spacing="15" styleClass="search-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <Label text="Books Management" styleClass="page-title">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Label>

         <!-- Search Controls -->
         <HBox spacing="15" alignment="CENTER_LEFT" styleClass="search-controls">
            <Label text="Search by:" />
            <ComboBox fx:id="searchTypeCombo" prefWidth="120" />
            <TextField fx:id="searchField" promptText="Enter search term..." prefWidth="300" />
            <Button fx:id="searchButton" text="ðŸ” Search" styleClass="search-button" />
            <Button fx:id="clearSearchButton" text="Clear" styleClass="clear-button" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" text="ðŸ”„ Refresh" styleClass="refresh-button" />
         </HBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER_LEFT" styleClass="action-buttons">
            <Button fx:id="addBookButton" text="âž• Add Book" styleClass="add-button" />
            <Button fx:id="editBookButton" text="âœï¸ Edit Book" styleClass="edit-button" />
            <Button fx:id="deleteBookButton" text="ðŸ—‘ï¸ Delete Book" styleClass="delete-button" />
         </HBox>
      </VBox>
   </top>

   <!-- Books Table -->
   <center>
      <VBox spacing="10" styleClass="table-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>

         <TableView fx:id="booksTable" styleClass="books-table">
            <columns>
               <TableColumn fx:id="idColumn" text="ID" prefWidth="60" />
               <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" />
               <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" />
               <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120" />
               <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120" />
               <TableColumn fx:id="totalCopiesColumn" text="Total" prefWidth="80" />
               <TableColumn fx:id="availableCopiesColumn" text="Available" prefWidth="80" />
               <TableColumn fx:id="statusColumn" text="Status" prefWidth="120" />
            </columns>
         </TableView>

      </VBox>
   </center>

</BorderPane>