            <Label fx:id="welcomeLabel" text="Welcome, User" styleClass="welcome-label">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userRoleLabel" text="Role: Student" styleClass="role-label" />
            <Button fx:id="logoutButton" text="Logout" styleClass="logout-button" />
         </HBox>

